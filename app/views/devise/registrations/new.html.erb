<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div>
    <%= f.label t('pages.Users.forms.name', default: 'Name') , style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label t('pages.Users.forms.email', default: 'Email')  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label t('pages.Users.forms.email confirm', default: 'Email Confirmation') , style: "display: block" %>
    <%= f.text_field :email_confirmation %>
  </div>


  <div class="field">
    <%= f.label t('pages.Users.forms.password', default: 'Password')  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('pages.Users.forms.password confirm', default: 'Password Confirmation')  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
