<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.error message',count: team.errors.count) %></h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label t('pages.Teams.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Teams.forms.description', default: 'Description'), style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Teams.forms.leader', default: 'Leader'), style: "display: block" %>
    <%= form.select :leader_id,Employee.all.collect{ |employee| [employee.name,employee.id] },{},{class: "form-control"} %>
  </div>


<div class="form-group">
    <%= form.label t('pages.Teams.forms.members', default: 'Members'), style: "display: block" %>
   <%# <%= form.select :employee_ids, Employee.all.where.not(id: @team.leader_id).collect{ |employee| [employee.name,employee.id] },{:include_hidden => false, selected: @team.employees.map(&:id)},{ :multiple => true, :class => 'p-1 pr-5'} %>  
    <%= form.collection_select(:employee_ids, Employee.all, :id, :name, {include_hidden: false}, {:multiple => true, class: "form-control"}) %>

  </div>


  <div class="form-group">
    <%= form.submit t('helpers.submit.submit', model: ""), class: "btn btn-primary mt-2 px-4" %>
  </div>
<% end %>
