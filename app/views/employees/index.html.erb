<div class="container">
<h1 class="text-center mt-5"><%= t 'models.Employees' %></h1>
 <a href="/" class="mt-5">&#8592; <%= t 'global.buttons.back to home' %></a>



<a href="/employees/new">
<span style="font-size: 48px; color: Dodgerblue;" class="d-block mt-3">
<i class="fas fa-plus-circle"></i>
</span>
</a>

   <table class="table table-hover">
    <thead class="table-info">
      <tr>
       <th><%= t 'pages.Employees.forms.id' %></th>
        <th><%= t 'pages.Employees.forms.name' %></th>
        <th><%= t 'pages.Employees.forms.email' %></th>
        <th><%= t 'pages.Employees.forms.job' %></th>
        <th><%= t 'pages.Employees.forms.salary' %></th>
        <th><%= t 'pages.Employees.forms.team' %></th>
        <th><%= t 'pages.Employees.forms.employment status' %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <% @employees.each do |employee| %>
      <tr>
        <td># <%=employee.id%></td>
        <td><%=employee.name%></td>
        <td><%=employee.email%></td>
        <td><%=employee.job%></td>
        <td><%=employee.salary%></td>
        <% if !(employee.team_id).nil? %>
        <td> <%=Team.find(employee.team_id).name %></td> 
        <%else%> <td></td> <%end%>
        <td><%=employee.employment_status%></td>
        <td class="px-0"><%= link_to t('global.buttons.show'), employee_path(employee), class: "btn btn-success"  %></td>
        <td class="px-0"><%= link_to t('global.buttons.edit'), edit_employee_path(employee), class: "btn btn-primary"  %></td>
        <td class="px-0"><%= button_to t('global.buttons.delete'), employee_path(employee), method: :delete, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
 

</div>


