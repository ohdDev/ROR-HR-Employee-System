<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.error message',count: team.errors.count) %></h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('pages.Teams.forms.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('pages.Teams.forms.description'), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label t('pages.Teams.forms.leader'), style: "display: block" %>
    <%= form.select :leader_id,Employee.all.collect{ |employee| [employee.name,employee.id] } %>
  </div>


<div>
    <%= form.label t('pages.Teams.forms.members'), style: "display: block" %>
   <%= form.select :employees, Employee.all.where.not(id: @team.leader_id).collect{ |employee| [employee.name,employee.id] },{:include_hidden => false, selected: @team.employees.map(&:id)},{ :multiple => true, :class => 'p-1 pr-5'} %> 

  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
