<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
    
      <h2><%= t('global.messages.error message',count: user.errors.count)%></h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div>
    <%= form.label t('pages.Users.forms.picture', default: 'Picture'), style: "display: block" %>
    <%= form.file_field :picture%>
  </div>

  <div>
    <%= form.label t('pages.Users.forms.email', default: 'Email'), style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label t('pages.Users.forms.email confirm', default: 'Email Confirmation') , style: "display: block" %>
    <%= form.text_field :email_confirmation %>
  </div>

  <div>
    <%= form.label t('pages.Users.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

 <div>
    <%= form.label t('pages.Users.forms.password', default: 'Password') , style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.label t('pages.Users.forms.password confirm', default: 'Password Confirmation'), style: "display: block" %>
    <%= form.text_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
