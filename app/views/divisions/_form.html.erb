<%= form_with(model: division) do |form| %>
  <% if division.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.error message',count: division.errors.count) %></h2>

      <ul>
        <% division.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('pages.Divisions.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('pages.Divisions.forms.description', default: 'Description'), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label t('pages.Divisions.forms.manager', default: 'Manager'), style: "display: block" %>
    <%= form.select :employee_id, Employee.all.collect{ |employee| [employee.name,employee.id] }%>
  </div>

