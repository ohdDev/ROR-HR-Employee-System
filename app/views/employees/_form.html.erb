<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.error message',count: employee.errors.count) %></h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= form.label t('pages.Employees.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Employees.forms.email', default: 'Email'), style: "display: block" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.label t('pages.Employees.forms.email confirmation', default: 'Email Confirmation') , style: "display: block" %>
    <%= form.text_field :email_confirmation,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Employees.forms.job', default: 'Job'), style: "display: block" %>
    <%= form.text_field :job, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Employees.forms.salary', default: 'Salary'), style: "display: block" %>
    <%= form.text_field :salary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t('pages.Employees.forms.employment status', default: 'Status'), style: "display: block" %>
    <%= form.text_field :employment_status, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label t('activerecord.models.team', default: 'Team'), style: "display: block" %>
    <%= form.select :team_id, Team.all.collect{ |team| [team.name,team.id] },{} , {class: "form-control"} %>
  </div>


  <div class="form-group">
   <%= form.submit t('helpers.submit.submit', model: ""), class: "btn btn-primary mt-2 px-4" %>
  </div>
<% end %>
