<div class="container">
<h1 class="text-center mt-5">Employees</h1>
 <a href="/" class="mt-5">&#8592; Back to Home</a>



<a href="/employees/new">
<span style="font-size: 48px; color: Dodgerblue;" class="d-block mt-3">
<i class="fas fa-plus-circle"></i>
</span>
</a>

   <table class="table table-hover">
    <thead class="table-info">
      <tr>
       <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Job</th>
        <th>Salary</th>
        <th>Team</th>
        <th>Employment Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
     <% @employees.each do |employee| %>
      <tr>
        <td># <%=employee.id%></td>
        <td><%=employee.name%></td>
        <td><%=employee.email%></td>
        <td><%=employee.job%></td>
        <td><%=employee.salary%></td>
        <% if !(employee.team_id).nil? %>
        <td> <%=Team.find(employee.team_id).name %></td> 
        <%else%> <td></td> <%end%>
        <td><%=employee.employment_status%></td>
        <td> <a href="/employees/<%=employee.id%>/edit" class="btn btn-primary">Edit</a></td>
         <td><a href="/employees/<%=employee.id%>" id="destroy" class="btn btn-danger">Delete</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
 

</div>


