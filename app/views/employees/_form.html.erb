<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.messages.error message',count: employee.errors.count) %></h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div>
    <%= form.label t('pages.Employees.forms.name', default: 'Name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('pages.Employees.forms.email', default: 'Email'), style: "display: block" %>
    <%= form.text_field :email %>
  </div>


  <div>
    <%= form.label t('pages.Employees.forms.email confirmation', default: 'Email Confirmation') , style: "display: block" %>
    <%= form.text_field :email_confirmation %>
  </div>

  <div>
    <%= form.label t('pages.Employees.forms.job', default: 'Job'), style: "display: block" %>
    <%= form.text_field :job %>
  </div>

  <div>
    <%= form.label t('pages.Employees.forms.salary', default: 'Salary'), style: "display: block" %>
    <%= form.text_field :salary %>
  </div>

  <div>
    <%= form.label t('pages.Employees.forms.employment status', default: 'Status'), style: "display: block" %>
    <%= form.text_field :employment_status %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
